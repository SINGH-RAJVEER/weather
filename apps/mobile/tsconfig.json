{
  "extends": "../../packages/config-typescript/react.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@weather/types": ["../../packages/types/src"],
      "@weather/database": ["../../packages/database/src"]
    }
  },
  "include": ["src/**/*", "App.tsx", "index.ts", "*.d.ts"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "tailwind.config.js"]
}
