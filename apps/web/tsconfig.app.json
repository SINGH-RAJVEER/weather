{
  "extends": "@weather/config-typescript/react.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "types": ["vite/client"],

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
